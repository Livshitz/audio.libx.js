{
    "name": "audio.libx.js",
    "version": "0.6.3",
    "description": "Comprehensive audio library with progressive streaming, recording capabilities, real-time processing, and intelligent caching for web applications",
    "main": "build/index.js",
    "module": "build/index.js",
    "types": "build/index.d.ts",
    "license": "MIT",
    "author": "Livshitz",
    "homepage": "https://github.com/livshitz/audio.libx.js",
    "scripts": {
        "format": "prettier --config .prettierrc 'src/**/*.ts' 'tests/**/*.ts' --write",
        "build": "tsc",
        "build:watch": "tsc -w",
        "dev": "tsc -w",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect ./node_modules/jest/bin/jest.js --runInBand --colors --verbose",
        "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura --coverageReporters=html",
        "lint": "tsc --noEmit",
        "clean": "rm -rf build dist",
        "prepublishOnly": "npm run clean && npm run build && npm test",
        "bump": "./bump.sh",
        "serve": "node bin/serve.js",
        "example": "npm run build && npm run serve",
        "example:dev": "npm run build && node bin/serve.js --dev"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/livshitz/audio.libx.js.git"
    },
    "bugs": {
        "url": "https://github.com/livshitz/audio.libx.js/issues"
    },
    "keywords": [
        "audio",
        "streaming",
        "recording",
        "mediasource",
        "mediarecorder",
        "progressive",
        "caching",
        "browser",
        "web-audio",
        "mp3",
        "wav",
        "webm",
        "silence-trimming",
        "indexeddb",
        "microphone",
        "permissions",
        "real-time",
        "audio-effects",
        "getUserMedia"
    ],
    "files": [
        "build/**",
        "src/**",
        "examples/**",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.7.9",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "jest-junit-reporter": "^1.1.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "typescript": "^5.6.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "roots": [
            "<rootDir>/src",
            "<rootDir>/tests"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts"
        ],
        "coverageDirectory": "build/coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    },
    "jest-junit": {
        "suiteName": "audio.libx.js Tests",
        "outputDirectory": "build/test_reports",
        "output": "./.tmp/test/TEST-RESULTS.xml",
        "classNameTemplate": "{classname} - {title}",
        "titleTemplate": "{classname} - {title}",
        "ancestorSeparator": " > ",
        "usePathForSuiteName": "true"
    }
}
